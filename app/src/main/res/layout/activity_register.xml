<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/activity_register"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.jedrzej.sortify.ui.RegisterActivity">

    <EditText
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_field"
        android:hint="Email"
        android:selectAllOnFocus="false"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="@+id/activity_register"
        android:layout_marginTop="160dp"/>

    <EditText
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordField"
        android:hint="Password"
        android:selectAllOnFocus="true"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/email_field"
        app:layout_constraintRight_toRightOf="@+id/email_field"/>

    <Button
        android:text="Register"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:id="@+id/registerButton"
        app:layout_constraintLeft_toLeftOf="@+id/email_field"
        app:layout_constraintTop_toBottomOf="@+id/passwordField"
        android:layout_marginTop="48dp"/>
</android.support.constraint.ConstraintLayout>
